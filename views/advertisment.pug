doctype html
title Classfied Ads
meta(charset='UTF-8')
meta(name='viewport' content='width=device-width, initial-scale=1')
link(rel='stylesheet' href='https://www.w3schools.com/w3css/4/w3.css')
style.
  body, html {
  height: 100%;
  font-family: "Inconsolata", sans-serif;
  }

// Links for home,login, register,logout
.w3-top
  .w3-row.w3-padding.w3-orange
    .w3-col.s3
      a(href='/') Home
    .w3-col.s3
      a(href='/register') SignUp
    .w3-col.s3
      a(href='/login') SignIn
    .w3-col.s3
      a(href='/logout') Logout      
  //Menu Display
  #menu.w3-container
     h3
  strong Advertisement-Display
  p
      .w3-row.w3-center.w3-card.w3-padding
        a#myLink(href='javascript:void(0)' onclick="openMenu(event, 'View');")
          .w3-col.w3-container.w3-padding View
          .w3-col.s6.tablink
        a(href='javascript:void(0)' onclick="openMenu(event, 'View');")



      #View.w3-container.menu.w3-padding-48.w3-card
         h1 Products
            table
                thead
                    th Product Name
                    th Description
                    th Price
                    th Edit
                    th Delete
            tbody
                each advertisment in allAdvertisment
                    tr
                        td #{advertisment.productname}
                        td #{advertisment.description}
                        td #{advertisment.price}
                        td
                            a(href="/advertisment/edit/"+advertisment._id)
                                |Edit
                        td
                            a(href="/advertisment/delete/"+advertisment._id title="Delete" onClick="return confirm(\'You wanna delete it?\');")
                                |Delete                          
